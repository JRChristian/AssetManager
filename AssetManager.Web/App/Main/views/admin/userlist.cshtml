<div class="panel panel-default" ng-controller="app.views.admin.userlist as vm">
    <div class="panel-heading" style="position: relative;">
        <div class="row">

            <!-- Title -->
            <h3 class="panel-title col-xs-6">
                @L("UserList") 
            </h3>
            <div class="col-xs-6 text-right">
                @L("FilterBy")
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>@L("Tenant")</th>
                    <th>@L("UserName")</th>
                    <th>@L("FirstName")</th>
                    <th>@L("LastName")</th>
                    <th>@L("Email")</th>
                    <th>@L("LastLogin")</th>
                    <th>@L("Actions")</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in vm.users">
                    <td>{{user.tenancyName}}</td>
                    <td>{{user.userName}}</td>
                    <td>{{user.name}}</td>
                    <td>{{user.surname}}</td>
                    <td>{{user.emailAddress}}</td>
                    <td>{{user.lastLoginTime | momentFromNow}}</td>
                    <td>
                        <a ui-sref="useredit({ userId: user.id})"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
