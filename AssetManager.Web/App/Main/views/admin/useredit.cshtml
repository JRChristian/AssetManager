<div ng-controller="app.views.admin.useredit as vm">
    <div class="container">
        <form id="EditUserForm" class="form-horizontal" role="form" name="editUserForm" novalidate>
            <div class="form-group">
                <label class="col-sm-2" control-label for="Tenant">@L("Tenant")</label>
                <div class="col-sm-10"><input type="text" id="Tenant" ng-model="vm.user.tenancyName" class="form-control"></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="UserName">@L("UserName")</label>
                <div class="col-sm-10"><p class="form-control-static">{{vm.user.userName}}</p></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="FirstName">@L("Name")</label>
                <div class="col-sm-3"><input type="text" id="FirstName" ng-model="vm.user.name" class="form-control" required></div>
                <div class="col-sm-7"><input type="text" id="LastName" ng-model="vm.user.surname" class="form-control" required></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" for="EmailAddress">@L("Email")</label>
                <div class="col-sm-10"><input type="text" id="EmailAddress" ng-model="vm.user.emailAddress" class="form-control"></div>
            </div>
            <button ng-click="vm.saveUser()" ng-disabled="EditUserForm.$invalid" type="submit" class="btn btn-primary">@L("UpdateTheUser")</button>
        </form>
    </div>
</div>

