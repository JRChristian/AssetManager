<div ng-controller="app.views.assethealth.dashboard as vm">
    <div class="container">
        <div class="row">
            <h3>@L("AssetHealthTtlDashboard")</h3>
            <a ui-sref="assetlist" class="btn btn-default btn-sm"><i class="fa fa-tags"></i> @L("AssetBtnGoToAssetList")</a>
            <a ui-sref="assetlevelbarchart" class="btn btn-default btn-sm"><i class="fa fa-area-chart"></i> @L("AssetMnuAssetLevelBarChart")</a>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h4>@L("AssetHealthTtlMetrics")</h4>
                <div ng-repeat="m in vm.metrics | filter: { hasLimits: true }">
                    <div ng-hide="m.repeated">
                        <h5>
                            {{m.name}}
                            <div class="btn-group btn-group-xs" ng-hide="m.assetId<=0">
                                <a class="btn btn-default" ui-sref="assetlimitview({ assetId: m.assetId })"><i class="fa fa-bar-chart"></i></a>
                            </div>
                        </h5>
                    </div>
                    <div><nvd3 options="vm.chartOptions" data="m.chartData"></nvd3></div>
                </div>
            </div>
            <div class="col-sm-6">
                <h4>Activity</h4>
                <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-envelope-o"></i> Notices</a>
                <p><i>...coming soon...</i></p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h4>@L("AssetHealthTtlRecentDeviations")</h4>
                <a ui-sref="iowvariablelist" class="btn btn-default btn-sm"><i class="fa fa-sitemap"></i> @L("IOWVariables")</a>
                <a ui-sref="iowlimitstatus" class="btn btn-default btn-sm"><i class="fa fa-crosshairs"></i> @L("IowTtlLimitStatus")</a>
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@L("Variable")</th>
                                <th>@L("Actual")</th>
                                <th>@L("Status")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="v in vm.variableLimits">
                                <td>
                                    <div class="btn-group btn-group-xs">
                                        <a class="btn btn-default" ui-sref="iowvariablechart({ Id: v.variableId })"><i class="fa fa-line-chart"></i></a>
                                        <a class="btn btn-default" ui-sref="iowvariabledeviations({ Id: v.variableId })"><i class="fa fa-exclamation-circle"></i></a>
                                        <a class="btn btn-default" ui-sref="iowvariableview({ Id: v.variableId })"><i class="fa fa-binoculars"></i></a>
                                    </div>
                                </td>
                                <td>{{v.variableName}}</td>
                                <td>{{v.lastValue}}</td>
                                <td><span class="{{v.severityClass}}">{{v.severityMessage1}}</span> {{v.severityMessage2}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-sm-6">
                <h4>Resources</h4>
                <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-envelope-o"></i> @L("ImgTtlImageList")</a>
                <p><i>...coming soon...</i></p>
            </div>
        </div>
    </div>
</div>