<div ng-controller="app.views.assethealth.dashboard2 as vm">
    <div class="container-fluid">
        <div class="row">
            <h3>@L("AssetHealthTtlDashboard") <small> {{vm.startDate | momentLocale}} - {{Date.now() | momentLocale}}</small></h3>
        </div>
        <div class="row">
            <div class="col-sm-7">
                @*<h5>Overall @L("AssetHealthTtlMetrics")</h5>
    <div ng-repeat="m in vm.overallStats">
