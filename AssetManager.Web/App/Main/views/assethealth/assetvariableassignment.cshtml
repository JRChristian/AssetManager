<div ng-controller="app.views.assetvariable.assignment as vm">
    <div class="container">
        <div class="row">
            <h3>@L("AssetHealthTtlAssetVariableAssignment")</h3>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <h4>@L("IOWVariables")</h4>
                <div id="grid1" ui-grid="vm.gridOptions" ui-grid-selection class="grid"></div>
                <div>
                    <button type="button" class="btn btn-primary btn-sm" ng-click="vm.selectAllVariables()">Select all</button>
                    <button type="button" class="btn btn-primary btn-sm" ng-click="vm.clearAllVariables()">Clear all</button>
                </div>
            </div>
            <div class="col-lg-6">
                <h4>@L("Assets")</h4>
                <div id="grid2" ui-grid="vm.gridOptions2" ui-grid-selection ui-grid-tree-view class="grid"></div>
                <div>
                    <button id="selectAllAssets" type="button" class="btn btn-primary btn-sm" ng-click="vm.selectAllAssets()">Select all</button>
                    <button id="clearAllAssets" type="button" class="btn btn-primary btn-sm" ng-click="vm.clearAllAssets()">Clear all</button>
                    <button id="expandAllAssets" type="button" class="btn btn-primary btn-sm" ng-click="vm.expandAllAssets()">@L("AssetBtnExpandHierarchy")</button>
                    <button id="collapseAllAssets" type="button" class="btn btn-primary btn-sm" ng-click="vm.collapseAllAssets()">@L("AssetBtnCollapseHierarchy")</button>
                </div>
            </div>
        </div>
    </div>
</div>