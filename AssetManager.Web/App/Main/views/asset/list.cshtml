<div class="panel panel-default" ng-controller="app.views.asset.list as vm">
    <div class="panel-heading" style="position: relative;">
        <div class="row">

            <!-- Title -->
            <h3 class="panel-title col-xs-6">
                @L("AssetList") 
            </h3>
            <div class="col-xs-6 text-right">
                <span>{{vm.getAssetCountText()}}</span>:
                @L("FilterBy")
                <select ng-model="selectedAssetType" ng-options="x.id as x.name for x in vm.assettypes">
                    <option value="">@L("AllAssetTypes")</option>
                </select>
                <button ui-sref="assetnew" class="btn btn-success"><i class="fa fa-plus"></i> @L("CreateTheAsset")</button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <!-- Asset list -->
        <table class="table">
            <thead>
                <tr>
                    <th>@L("Name")</th>
                    <th>@L("Description")</th>
                    <th>@L("AssetType")</th>
                    <th>@L("Created")</th>
                    <th>@L("Actions")</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="asset in vm.assets">
                    <td>{{asset.name}}</td>
                    <td>{{asset.description}}</td>
                    <td>{{asset.assetTypeName}}</td>
                    <td>{{asset.materials}}</td>
                   <td>{{asset.creationTime | momentFromNow}}</td>
                    <td>
                        <a ui-sref="assetedit({ assetId: asset.id})"><i class="fa fa-pencil-square-o"></i></a>
                        <i class="fa fa-trash"></i>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
