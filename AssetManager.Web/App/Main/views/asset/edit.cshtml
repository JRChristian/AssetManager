<div ng-controller="app.views.asset.edit as vm">
    <div class="container">
        <form id="EditAssetForm" class="form-horizontal" role="form" name="editAssetForm" novalidate>
            <div class="form-group">
                <label class="col-sm-2" control-label for="AssetName">@L("AssetName")</label>
                <div class="col-sm-10"><input type="text" id="AssetName" ng-model="vm.asset.name" class="form-control" required></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="AssetDescription">@L("AssetDescription")</label>
                <div class="col-sm-10"><textarea id="AssetDescription" ng-model="vm.asset.description" class="form-control" rows="3"></textarea></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="AssetType">@L("AssetType")</label>
                <div class="col-sm-10">
                    <select id="AssetType" class="form-control" ng-model="vm.asset.assetTypeId" ng-options="x.id as x.name for x in vm.assettypes"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="AssetMaterials">@L("AssetMaterials")</label>
                <div class="col-sm-10"><textarea id="AssetMaterials" ng-model="vm.asset.materials" class="form-control" rows="3"></textarea></div>
            </div>
            <button ng-click="vm.cancel()" class="btn btn-warning">@L("Cancel")</button>
            <button ng-click="vm.save()" ng-disabled="EditAssetForm.$invalid" type="submit" class="btn btn-success">@L("UpdateTheAsset")</button>
        </form>
    </div>
</div>
