<div ng-controller="app.views.tag.edit as vm">
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                <h3>@L("TagDetails")</h3>
            </div>
            <div class="col-sm-3">
                <button ng-click="vm.saveTag()" ng-disabled="EditTagForm.$invalid" type="submit" class="btn btn-primary">@L("UpdateTheTag")</button>
            </div>
        </div>
        <form id="EditTagForm" class="form-horizontal" role="form" name="editTagForm" novalidate>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagName">@L("TagName")</label>
                <div class="col-sm-10"><input type="text" id="TagName" ng-model="vm.tag.name" class="form-control" required></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagDescription">@L("Description")</label>
                <div class="col-sm-10"><textarea id="TagDescription" ng-model="vm.tag.description" class="form-control" rows="3"></textarea></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagUOM">@L("UOM")</label>
                <div class="col-sm-10"><textarea id="TagUOM" ng-model="vm.tag.uom" class="form-control"></textarea></div>
            </div>
        </form>
    </div>
</div>
