<div ng-controller="app.views.tag.edit as vm">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>@L("TagDetails")</h3>
            </div>
            <div class="col-sm-6 text-right">
                <button ng-click="vm.saveTag()" ng-disabled="EditTagForm.$invalid" type="submit" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> @L("UpdateTheTag")</button>
                <a ui-sref="tagdata({ tagId: {{vm.tag.id}} })" class="btn btn-default btn-sm"><i class="fa fa-line-chart"></i> @L("Chart")</a>
            </div>
        </div>
        <form id="EditTagForm" class="form-horizontal" role="form" name="editTagForm" novalidate>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagName">@L("TagName")</label>
                <div class="col-sm-10"><input type="text" id="TagName" ng-model="vm.tag.name" class="form-control" required></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagDescription">@L("Description")</label>
                <div class="col-sm-10"><textarea id="TagDescription" ng-model="vm.tag.description" class="form-control" rows="3" required></textarea></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagUOM">@L("UOM")</label>
                <div class="col-sm-10"><input  type="text" id="TagUOM" ng-model="vm.tag.uom" class="form-control"></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagPrecision">@L("Precision")</label>
                <div class="col-sm-2"><input type="number" min="-10" max="10" id="TagPrecision" ng-model="vm.tag.precision" class="form-control"></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="TagType">@L("TagType")</label>
                <div class="col-sm-2"><select id="TagType" ng-model="vm.tag.type" ng-options="x.id as x.name for x in vm.tagTypes" class="form-control"></div>
            </div>
        </form>
    </div>
</div>
