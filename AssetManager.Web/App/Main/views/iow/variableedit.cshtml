<div ng-controller="app.views.variable.edit as vm">
    <div class="container">
        <form id="EditVariableForm" class="form-horizontal" role="form" name="editVariableForm" novalidate>
            <div class="form-group">
                <label class="col-sm-2" control-label for="VariableName">@L("VariableName")</label>
                <div class="col-sm-10"><input type="text" id="VariableName" ng-model="vm.variable.name" class="form-control" required></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="VariableDescription">@L("Description")</label>
                <div class="col-sm-10"><textarea id="VariableDescription" ng-model="vm.variable.description" class="form-control" rows="3"></textarea></div>
            </div>
            <div class="form-group">
                <label class="col-sm-2" control-label for="VariableUOM">@L("UOM")</label>
                <div class="col-sm-10"><textarea id="VariableUOM" ng-model="vm.variable.uom" class="form-control" rows="3"></textarea></div>
            </div>
            <button ng-click="vm.saveVariable()" ng-disabled="EditVariableForm.$invalid" type="submit" class="btn btn-primary">@L("UpdateTheVariable")</button>
        </form>
    </div>
</div>