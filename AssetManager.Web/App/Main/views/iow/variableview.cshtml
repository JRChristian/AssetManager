<div ng-controller="app.views.variable.view as vm">
    <div class="container">
        <div class="row">
            <h3>@L("IowVariable")</h3>
        </div>
        <div class="row">
            <form id="ViewVariableForm" class="form-horizontal" role="form" name="viewVariableForm" novalidate>
                <div class="form-group">
                    <label class="col-sm-2" control-label for="VariableName">@L("VariableName")</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">{{vm.variable.name}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2" control-label for="VariableDescription">@L("Description")</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">{{vm.variable.description}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2" control-label for="VariableTagName">@L("TagName")</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">{{vm.variable.tagName}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2" control-label for="VariableUOM">@L("UOM")</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">{{vm.variable.uom}}</p>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            @* <div id="grid1" ui-grid="vm.gridlimits" class="grid"></div> *@
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("Name")</th>
                            <th>@L("Direction")</th>
                            <th>@L("Limit")</th>
                            <th>@L("Causes")</th>
                            <th>@L("Consequences")</th>
                            <th>@L("Action")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="limit in vm.variable.limits" ng-class="{'danger':limit.criticality==1,'warning':limit.criticality==2}">
                            <td align="center">{{limit.criticality}}</td>
                            <td uib-tooltip="@L("Description"): {{limit.description}} @L("ResponseGoal"): {{limit.responseGoal}}" tooltip-append-to-body=true>{{limit.name}}</td>
                            <td align="center">{{limit.direction | direction}}</td>
                            <td align="center">{{limit.value}}</td>
                            <td>{{limit.cause}}</td>
                            <td>{{limit.consequences}}</td>
                            <td>{{limit.action}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <a ui-sref="iowvariablelist" class="btn btn-info btn-sm"><i class="fa fa-sitemap"></i> @L("IOWVariables")</a>
            <a ui-sref="iowvariablechart({ Id: {{vm.variable.id}} })" class="btn btn-info btn-sm"><i class="fa fa-line-chart"></i> @L("Chart")</a>
            <a ui-sref="iowvariabledeviations({ Id: {{vm.variable.id}} })" class="btn btn-info btn-sm"><i class="fa fa-exclamation-circle"></i> @L("IowBtnDeviations")</a>
            <a ui-sref="imageview({ Id: 1 })" class="btn btn-info btn-sm"><i class="fa fa-image"></i> @L("Drawings")</a>
            <a ui-sref="iowvariableedit({ Id: {{vm.variable.id}} })" class="btn btn-success btn-sm"><i class="fa fa-pencil-square-o"></i> @L("Edit")</a>
        </div>
    </div>
</div>
