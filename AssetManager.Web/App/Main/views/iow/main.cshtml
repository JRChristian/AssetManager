<div ng-controller="app.views.iow.main as vm">
    <div class="container">
        <div class="row">
            <h3>@L("AssetList")</h3>
        </div>
        <div class="row">
            <h4>Chevron Burnaby Refinery <small>Sketch-up 3D Warehouse</small></h4>
            <iframe src="https://3dwarehouse.sketchup.com/embed.html?mid=806a19339963daa72e4cb40cc1445e5b&width=580&height=326" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" width="580" height="326" allowfullscreen></iframe>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>@L("Name")</th>
                        <th>@L("Description")</th>
                        <th>@L("Status")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="asset in vm.assets">
                        <td>{{asset.name}}</td>
                        <td>{{asset.description}}</td>
                        <td>{{vm.myStatus()}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <string>Flot</string>
                <flot dataset="vm.chartData" options="vm.chartOptions" width="100%" height="300px"></flot>
            </div>
            <div class="col-xs-6">
                <string>CanvasJS</string>
                <div id="chartContainer" style="width:100%; height:300px;"></div>
            </div>
        </div>
    </div>
</div>

