<div ng-controller="app.views.iow.main as vm">
    <div class="container">
        <div class="row">
            <h3>@L("AssetList")</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p>
                    <a href="#" class="btn btn-sq-lg btn-primary">
                        <i class="fa fa-user fa-5x"></i><br />
                        Demo Primary <br>Button
                    </a>
                    <a href="#" class="btn btn-sq-lg btn-success">
                        <i class="fa fa-user fa-5x"></i><br />
                        Demo Success <br>Button
                    </a>
                    <a href="#" class="btn btn-sq-lg btn-info">
                        <i class="fa fa-user fa-5x"></i><br />
                        Demo Info <br>Button
                    </a>
                    <a href="#" class="btn btn-sq-lg btn-warning">
                        <i class="fa fa-user fa-5x"></i><br />
                        Demo Warning <br>Button
                    </a>
                    <a href="#" class="btn btn-sq-lg btn-danger">
                        <i class="fa fa-user fa-5x"></i><br />
                        Demo Danger <br>Button
                    </a>
                </p>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>@L("Name")</th>
                        <th>@L("Description")</th>
                        <th>@L("Status")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="asset in vm.assets">
                        <td>{{asset.name}}</td>
                        <td>{{asset.description}}</td>
                        <td>{{vm.myStatus()}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <string>Flot</string>
                <flot dataset="vm.chartData" options="vm.chartOptions" width="100%" height="300px"></flot>
            </div>
            <div class="col-xs-6">
                <string>CanvasJS</string>
                <div id="chartContainer" style="width:100%; height:300px;"></div>
            </div>
        </div>
    </div>
</div>

